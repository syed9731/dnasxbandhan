@model DNAS.Domian.DTO.Template.TemplateModel
<link rel="stylesheet" href="~/assets/vendor/select2/select2.min.css" />
<link rel="stylesheet" href="~/assets/summernote/npm/summernote@0.8.18/dist/summernote.min.css" />
<link rel="stylesheet" href="~/assets/summernote/npm/summernote@0.8.18/dist/summernote-helper.css" rel="stylesheet" />

<style>
    .underpara {
        margin-top: 1rem;
        margin-bottom: 1rem;
    }

    .note-editor {
        background: #fff;
    }

    .btn-rounded .ti-plus, .btn-rounded .ti-close {
        vertical-align: middle;
    }

    span {
        display: inline-block;
    }
</style>
<div class="content-wrapper">
    <div class="card">
        <div class="card-body">
            <h4 class="f-s-22 f-w-600 text-black pb-4 text-capitalize ">Edit Template</h4>
            <form action="/Template/EditTemplate" method="post">
                @Html.HiddenFor(m => m.TemplateId)
                @Html.HiddenFor(m => m.UserId)
                @Html.HiddenFor(m => m.CategoryId)
                <div class="row g-4">
                    <div class="col-md-6">
                        <span class="form-label">Name*</span>
                        @Html.TextBoxFor(m => m.TemplateName, new { @class = "form-control  form-control-lg" })
                        
                    </div>

                    <div class="col-12">
                        <span class="form-label">Template Body* </span>
                        @Html.TextAreaFor(m => m.TemplateBody, new { id = "summernote" })
                       
                    </div>

                    <div class="col-12 text-end">
                        <button class="btn btn-primary btn-lg f-s-16" type="submit" id="EditTemplate">
                            Save Template
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
