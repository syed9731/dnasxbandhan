@model DNAS.Domian.DTO.Draft.DraftNoteData
@{
    ViewBag.DraftNotes = "active";
}
<div class="content-wrapper">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="f-w-700 f-s-32">Draft Notes</h1>
    </div>

    <form id="searchForm" method="get" action="/Note/Draft">
        <div class="dashboard-searchform gap-3">
            <div class=" search-section">
                @Html.TextBoxFor(model => model.FilterDrafts.StartDate, new { @class = "form-control form-control-lg search-field", @name = "StartDate", id = "datePickerStartDate" })
            </div>
            <div class=" search-section">
                @Html.TextBoxFor(model => model.FilterDrafts.EndDate, new { @class = "form-control form-control-lg search-field", @name = "EndDate", id = "datePickerEndDate" })
            </div>
            <div class="search-section">
                @Html.DropDownListFor(model => model.FilterDrafts.Category, new SelectList(new[]
                         {
                new SelectListItem { Value = "", Text = "Select Category" },
                new SelectListItem { Value = "Financial", Text = "Financial" },
                new SelectListItem { Value = "Non Financial", Text = "Non Financial" }
                }, "Value", "Text"), new { @class = "form-control form-control-lg search-field", id = "categoryField", name = "category" })
            </div>

            <div class="search-section gap-3 d-flex">
                <button type="submit" class="btn btn-primary search-btn">Search</button>
            
                <input type="button" id="DownloadDraft" class="btn btn-primary search-btn" value="Download Excel" />
            </div>
        </div>
    </form>

    <div class="row pt-4">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive md-height ">
                        <table class="table table-striped" aria-describedby="mydesc">
                            <thead>
                                <tr>
                                    <th>Note Title</th>
                                    <th>Category</th>
                                    <th>Create Date</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (DNAS.Domian.DTO.Draft.DraftNote i in Model.DraftNotes)
                                {
                                    <tr>
                                        <td onclick="viewDraft('@i.NoteId')" style="cursor:pointer">@i.NoteTitle</td>
                                        <td>@i.CategoryName</td>
                                        <td>@i.DateOfCreation.ToString("dd MMM yyyy")</td>
                                        <td>
                                            <button class="btn btn-outline-primary btn-sm btn-rounded me-2" onclick="viewDraft('@i.NoteId')" >
                                                <i class="ti-pencil"></i>
                                            </button>
                                            <button class="btn btn-outline-danger btn-sm btn-rounded draffdelete" data-val="@i.NoteId">
                                                <i class="ti-trash"></i>
                                            </button>
                                        </td>
                                    </tr>
                                }
                                @if (!Model.DraftNotes.Any())
                                {
                                    <tr>
                                        <td colspan="4">Data not avilable</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="delet_popup" tabindex="-1" aria-labelledby="delet_popupLabel" aria-hidden="true">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-body">
                <form action="/note/DeleteDraft" method="post">
                    <div class="text-end">
                        <button type="button" class="btn btn-outline-warning btn-sm btn-rounded" data-bs-dismiss="modal"
                                aria-label="Close">
                            <i class="mdi mdi mdi-close"></i>
                        </button>
                    </div>

                    <div class="modal-top-icon f-s-60 text-center text-danger">
                        <i class="mdi mdi-alert-circle-outline"></i>
                    </div>
                    <h2 class="text-center f-s-24 text-primary pt-1 pb-3">
                        Are you sure?
                    </h2>
                    <p class="text-center f-s-15 pb-2">
                        Do you really want to delete this record? This process cannot be
                        undone.
                    </p>
                    <div class="text-center pb-2">
                        <button type="button" class="btn btn-secondary btn-lg f-s-16" data-bs-dismiss="modal">
                            No
                        </button>
                        <input type="hidden" name="noteid" id="Draftnote" />
                        <button type="submit" class="btn btn-primary btn-lg f-s-16">Yes</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>



@section PostScripts {
    <link href="~/assets/vendor/bootstrap-datepicker/css/bootstrap-datepicker3.min.css" rel="stylesheet" />
    <script src="~/assets/vendor/bootstrap-datepicker/js/bootstrap-datepicker.min.js"></script>
    <script>
        $(function () {
            $("#datePickerStartDate, #datePickerEndDate").datepicker({
                autoclose: true,
                format: "dd/mm/yyyy",
                todayHighlight: true,
            });
        });

        function viewDraft(id) {
            if (id != '') {
                let url = "/Note/EditDraftNote?s=" + id;
                window.location.href = url;
            }
        }

        $('#DownloadDraft').click(function () {
            var jsonData = JSON.stringify(@Html.Raw(Json.Serialize(Model)));
            $.ajax({
                url: '@Url.Action("DownloadDraft", "Note")',
                type: 'POST',
                contentType: 'application/json',
                data: jsonData,
                xhrFields: {
                    responseType: 'blob'
                },
                success: function (response) {
                    var blob = new Blob([response], { type: 'application/vnd.openxmlformats-officedocument.spreadsheetml.sheet' });
                    var url = window.URL.createObjectURL(blob);

                    var link = document.createElement('a');
                    link.href = url;
                    link.download = 'DraftNoteReport.xlsx';

                    document.body.appendChild(link);
                    link.click();
                    document.body.removeChild(link);
                    window.URL.revokeObjectURL(url);
                },
                error: function (xhr, status, error) {
                    console.error(error);
                }
            });
        });

        $(document).ready(function () {
            if ('@TempData["msg"]' != '') {
               sucesstoast();
                $('.sucessmsg').html('@TempData["msg"]');
            }
            if ('@TempData["errormsg"]' != '') {
                errortoast();
                $('.alertmsg').html('@TempData["errormsg"]');
            }
         
            $(".draffdelete").on("click", function () {
                var id = $(this).attr("data-val");
                $('#delet_popup').modal('toggle');
                $("#Draftnote").val(id)
            });
        });
    </script>
}